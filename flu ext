7a.import 'package:flutter/material.dart';

void main() => runApp(FormDesignApp());

class FormDesignApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: Text("User Form")),
        body: Padding(
          padding: EdgeInsets.all(16),
          child: Column(
            children: [
              TextField(decoration: InputDecoration(labelText: 'Name')),
              TextField(decoration: InputDecoration(labelText: 'Email')),
              TextField(decoration: InputDecoration(labelText: 'Phone')),
              TextField(
                decoration: InputDecoration(labelText: 'Password'),
                obscureText: true,
              ),
              Row(
                children: [
                  Text('Gender:'),
                  Radio(value: 'Male', groupValue: null, onChanged: (_) {}),
                  Text('Male'),
                  Radio(value: 'Female', groupValue: null, onChanged: (_) {}),
                  Text('Female'),
                ],
              ),
              ElevatedButton(onPressed: () {}, child: Text("Submit")),
            ],
          ),
        ),
      ),
    );
  }
}






7b.import 'package:flutter/material.dart';

void main() => runApp(FormValidationApp());

class FormValidationApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) => MaterialApp(home: FormValidation());
}

class FormValidation extends StatefulWidget {
  @override
  _FormValidationState createState() => _FormValidationState();
}

class _FormValidationState extends State<FormValidation> {
  final _formKey = GlobalKey<FormState>();
  final nameCtrl = TextEditingController();
  final emailCtrl = TextEditingController();

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text("Form Validation")),
      body: Padding(
        padding: EdgeInsets.all(16),
        child: Form(
          key: _formKey,
          child: Column(children: [
            TextFormField(
              controller: nameCtrl,
              decoration: InputDecoration(labelText: 'Name'),
              validator: (v) => v!.isEmpty ? 'Enter name' : null,
            ),
            TextFormField(
              controller: emailCtrl,
              decoration: InputDecoration(labelText: 'Email'),
              validator: (v) => !v!.contains('@') ? 'Invalid email' : null,
            ),
            SizedBox(height: 20),
            ElevatedButton(
              onPressed: () {
                if (_formKey.currentState!.validate()) {
                  ScaffoldMessenger.of(context).showSnackBar(
                    SnackBar(content: Text("Form Submitted Successfully!")),
                  );
                }
              },
              child: Text("Submit"),
            ),
          ]),
        ),
      ),
    );
  }
}
